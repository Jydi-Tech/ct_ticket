{
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Angular: Serve + Debug (Firefox)",
      "configurations": ["Angular (Firefox)"],
      "preLaunchTask": "npm: start"
    },
    {
      "name": "Angular: Serve + Debug (Chrome)",
      "configurations": ["Angular (Chrome)"],
      "preLaunchTask": "npm: start"
    }
  ],
  "configurations": [
    {
      "name": "Angular (Firefox)",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}",
      "reAttach": true,
      "pathMappings": [
        { "url": "webpack://", "path": "${workspaceFolder}" }
      ]
    },
    {
      "name": "Angular (Chrome)",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:4200/",
      "webRoot": "${workspaceFolder}",
      "sourceMaps": true,
      "trace": false
    },
    {
      "name": "Karma (Firefox)",
      "type": "firefox",
      "request": "launch",
      "url": "http://localhost:9876/debug.html",
      "webRoot": "${workspaceFolder}",
      "reAttach": true
    }
  ]
}

  